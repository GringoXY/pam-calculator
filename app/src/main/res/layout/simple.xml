<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".SimpleActivity">

    <ScrollView
        android:id="@+id/scrollView_history"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fadeScrollbars="false"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toTopOf="@id/scrollView_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">
        <TextView
            android:id="@+id/history"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginStart="3dp"
            android:layout_marginEnd="3dp"
            android:textAlignment="textEnd"
            android:textColor="@color/darkgray"
            android:textSize="@dimen/txtHistorySize" />
    </ScrollView>

    <ScrollView
        android:id="@+id/scrollView_result"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fadeScrollbars="false"
        android:background="@android:color/white"
        app:layout_constraintHeight_percent="0.15"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView_history">
        <TextView
            android:id="@+id/result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:hint="Start typing..."
            android:gravity="bottom|end"
            android:textSize="@dimen/txtViewSize" />
    </ScrollView>

    <GridLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_margin="3dp"
        android:columnCount="4"
        android:rowCount="5"
        android:paddingBottom="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.56"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/scrollView_result">

        <Button
            android:id="@+id/btn_all_clear"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="AC"
            android:textColor="@color/red"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_clear"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="C"
            android:textColor="@color/red"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_backspace"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="âŒ«"
            android:textColor="@color/red"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_divide"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="0"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="/"
            android:textColor="@color/green"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_7"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="7"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_8"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="8"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_9"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="9"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_multiply"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="1"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="*"
            android:textColor="@color/green"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_4"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="4"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_5"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="5"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_6"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="6"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_subtract"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="2"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="-"
            android:textColor="@color/green"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_1"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="1"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_2"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="2"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_3"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="3"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_add"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="3"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="+"
            android:textColor="@color/green"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_0"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="0"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="0"
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_decimal"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="1"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="."
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_opposite"
            android:layout_height="0dp"
            android:layout_width="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="2"
            android:layout_columnWeight="1"
            android:layout_margin="3dp"
            android:backgroundTint="@color/gray"
            android:text="+\\-"
            android:textColor="@color/green"
            android:textSize="@dimen/btnTextSize" />

        <Button
            android:id="@+id/btn_equals"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_row="4"
            android:layout_rowWeight="1"
            android:layout_column="3"
            android:layout_columnWeight="1"
            android:layout_gravity="fill_horizontal"
            android:layout_margin="3dp"
            android:backgroundTint="@color/orange"
            android:text="="
            android:textColor="@color/black"
            android:textSize="@dimen/btnTextSize" />

    </GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
